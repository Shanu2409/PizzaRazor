@page
@model RazorPizza.Pages.Checkout.CheckoutModel
@{
}


<h1>Your Order!</h1>
@{
    var photoPath = "~/images/Pizzas/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src="@photoPath" class="w-100 mb-5 rounded-2" asp-append-version="true" />
        <!-- asp append is used to keep are page fresh so that no refresh is required after change in img src-->
        <p>Your order for @Model.PizzaName Pizza is ready!</p>
        <p>Total Purchase price for your Order is: @Model.PizzaPrice</p>
        <br />
        <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>
    </div>
</div>